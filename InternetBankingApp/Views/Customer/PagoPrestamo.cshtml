@using InternetBankingApp.Core.Application.ViewModels.Transaccion;
@using InternetBankingApp.Core.Application.ViewModels.Prestamo;
@using InternetBankingApp.Core.Application.ViewModels.CuentaDeAhorro;
@using InternetBankingApp.Core.Application.Enums;
@using Microsoft.AspNetCore.Http;
@using InternetBankingApp.Core.Application.Dtos.Account;
@using InternetBankingApp.Core.Application.Helpers;
@inject IHttpContextAccessor httpContext;
@model SaveTransaccionViewModel;

@{
    ViewData["Title"] = "PagoExpreso";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var user = httpContext.HttpContext.Session.get<AuthenticationResponse>
          ("User");

    List<CuentaDeAhorroViewModel> Cuentas = ViewBag.cuentas;
    List<PrestamoViewModel> prestamos = ViewBag.prestamos;
}

<div class="d-flex align-items-center justify-content-center container mt-4">
    <form method="post" class="w-25 bg-secondary p-3" asp-controller="Customer" asp-action="PagoPrestamo">
        <div class="p-2 bg-light mb-2 ">
            <h1 style="color: white;" class="text-center text-black">Pagar Prestamo</h1>
        </div> 

        <input type="hidden" name="userId" value="@user.Id" />
        <input type="hidden" asp-for="Tipe" value="@((int)ETipoPago.PagoPretamo)" />

        <span asp-validation-for="ProductDestinoIde" class="text-danger"></span>
        <label asp-for="ProductDestinoIde" class="form-label">Prestamo a pagar :</label>
        <select class="form-control mb-3" asp-for="ProductDestinoIde">
            @foreach (var item in prestamos)
            {
                <option value="@item.Identifier">
                    @item.Identifier
                </option>
            }
        </select>

        <span asp-validation-for="Amount" class="text-danger"></span>
        <label asp-for="Amount" class="form-label">Cantidad a pagar:</label>
        <input type="number" class="form-control mb-3" asp-for="Amount" value="0"/>
        
        <span asp-validation-for="ProductOrigenIde" class="text-danger"></span>
        <label asp-for="ProductOrigenIde" class="form-label">Seleccione una cuenta:</label>
        <select class="form-control mb-3" asp-for="ProductOrigenIde">
            @foreach (var item in Cuentas)
            {
                <option value="@item.Identifier">
                    @item.Identifier
                </option>
            }
        </select>



        <div class="d-flex  justify-content-end align-items-end " style="gap:10px ;">
            <a asp-controller="Customer" asp-action="Index" asp-route-userId="@user.Id" class="btn btn-danger  font-weight-bold  ">Cancelar</a>
            <button type="submit"  class="btn btn-primary font-weight-bold">Pagar</button>
        </div>
    </form>
</div>
