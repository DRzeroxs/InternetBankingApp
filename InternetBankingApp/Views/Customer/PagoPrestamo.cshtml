@using InternetBankingApp.Core.Application.ViewModels.Transaccion;
@using InternetBankingApp.Core.Application.ViewModels.Prestamo;
@using InternetBankingApp.Core.Application.ViewModels.CuentaDeAhorro;
@using InternetBankingApp.Core.Application.Enums;
@using Microsoft.AspNetCore.Http;
@using InternetBankingApp.Core.Application.Dtos.Account;
@using InternetBankingApp.Core.Application.Helpers;
@inject IHttpContextAccessor httpContext;
@model SaveTransaccionViewModel;

@{
    ViewData["Title"] = "Pago prestamo";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var user = httpContext.HttpContext.Session.get<AuthenticationResponse>
          ("User");

    List<CuentaDeAhorroViewModel> Cuentas = ViewBag.cuentas;
    List<PrestamoViewModel> prestamos = ViewBag.prestamos;
}


<div class="row">
    <div class="container">
        <div class="justify-content-center">
            <div class="col-4 offset-4 mt-5">
                <div class="card-header text-light text-center" style="background: #023e8a">
                    <h6>Pago Prestamo</h6>
                </div>
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="card-body">
                    <form method="post" asp-controller="Customer" asp-action="PagoPrestamo">
                        <div class="mb-3">

                            <label asp-for="ProductDestinoIde" class="form-label">Prestamos</label>
                            <select class="form-control" asp-for="ProductDestinoIde">
                                <option value="0">Seleciona un prestamo</option>
                                @foreach (var item in prestamos)
                                {
                                    <option value="@item.Identifier">
                                        @item.Identifier
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="ProductDestinoIde" class="text-danger"></span>

                        </div>
                        <div class="mb-3">
                            <label asp-for="ProductOrigenIde" class="form-label">Cuentas</label>
                            <select class="form-control" asp-for="ProductOrigenIde">
                                <option value="0">Seleciona una cuenta</option>
                                @foreach (var item in Cuentas)
                                {
                                    <option value="@item.Identifier">
                                        @item.Identifier
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="ProductOrigenIde" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label>Monto</label>
                            <input type="number" value="0" asp-for="Amount" class="form-control" placeholder="$Ingrese el monto" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <input type="hidden" name="userId" value="@user.Id" />
                        <input type="hidden" asp-for="Tipe" value="@((int)ETipoPago.PagoPretamo)" />
                        <div class="d-flex  justify-content-end align-items-end " style="gap:10px ;">
                            <a asp-controller="Customer" asp-action="Index" asp-route-userId="@user.Id" class="btn btn-danger  font-weight-bold  ">Cancelar</a>
                            <button type="submit" class="btn text-white" style="background: #023e8a">Pagar</button>
                        </div>

                   </form>
                </div>
            </div>
        </div>
    </div>
</div>