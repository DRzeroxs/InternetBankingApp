@model List<InternetBankingApp.Core.Application.ViewModels.Beneficiario.ClientBeneficiaryViewModel>
@{
    ViewData["Title"] = "Beneficiary";
   
}

    <div class="mb-3">
    @await Html.PartialAsync("AddBeneficiary", new InternetBankingApp.Core.Application.
    ViewModels.Beneficiario.SaveBeneficiarioViewModel())
    </div>

<div>
    <form method="post">
        <div class="justify-content-center">
            <div class="col-auto">
                <table class="table table-striped table-bordered table-list" style="background-color: #ffffff">
                    <thead class="text-center">
                        <tr>
                            <th>Name</th>
                            <th>Last Name</th>
                            <th>Account Number</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody class="text-center" style="background-color: #fff0f3">
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.LastName</td>
                                <td>@item.AccountNumber</td>
                                <td> <a asp-controller="Customer" asp-action="DeleteBeneficiary" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a> </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </form>
</div>

