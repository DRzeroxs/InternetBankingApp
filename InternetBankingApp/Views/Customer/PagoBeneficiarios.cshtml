@model InternetBankingApp.Core.Application.ViewModels.Transaccion.SaveTransaccionViewModel;
@inject IHttpContextAccessor httpContext;
@using InternetBankingApp.Core.Application.Dtos.Account
@using Microsoft.AspNetCore.Http
@using InternetBankingApp.Core.Application.Helpers;
@{
    ViewData["Title"] = "PagoBeneficiarios";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var beneficiario = ViewBag.identifierBeneficiario as List
    <InternetBankingApp.Core.Application.ViewModels.Beneficiario.ClientBeneficiaryViewModel>;

    var user = httpContext.HttpContext.Session.get<AuthenticationResponse>
          ("User");

    var numCuentas = @ViewBag.indentificador;

 
}



<div class="d-flex align-items-center justify-content-center container mt-4">
    <form method="post" class="w-25 bg-secondary p-3" asp-controller="Customer" asp-action="PagoBeneficiarios">
        <div class="p-2 bg-light mb-2 ">
            <h1 style="color: white;" class="text-center text-black">Pago Beneficiarios</h1>
        </div> @Html.ValidationSummary(false, "", new { @class = "text-white" })


        <label class="mb-1 text-white" asp-for="CuentaOrigenId">Monto del Pago</label>

        <input type="number" class="form-control mb-3" asp-for="Amount"  />

        <input type="hidden" asp-for="userId" value="@user.Id" />

        <input type="hidden" asp-for="Tipe" value="4" />

        <label class="mb-1 text-white" asp-for="CuentaDestinoId">Cuentas de Beneficiarios</label>
        <select class="form-control mb-3" asp-for="CuentaDestinoId">

            @foreach (var item in beneficiario)
            {
                <option value="@item.AccountNumber">
                    @item.Name
                </option>
            }
        </select>

        <label class="mb-1 text-white" asp-for="CuentaOrigenId">Tus Cuentas</label>
        <select class="form-control mb-3" asp-for="CuentaOrigenId">

            @foreach (var item in numCuentas)
            {
                <option value="@item">
                    @item
                </option>
            }
        </select>



        <div class="d-flex  justify-content-end align-items-end " style="gap:10px ;">
            <a asp-controller="Customer" asp-action="Index" asp-route-userId="@user.Id" class="btn btn-danger  font-weight-bold  ">Cancelar</a>
            <button type="submit" class="btn btn-primary font-weight-bold">Pagar</button>


        </div>
    </form>
</div>


